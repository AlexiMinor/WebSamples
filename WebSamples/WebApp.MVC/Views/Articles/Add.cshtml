@model AddArticleModel

@{
    ViewBag.Title = "Article";
    Layout = "_Layout";
}

<h2>Add Article</h2>

<form asp-action="AddProcessing" asp-controller="Articles" method="post">
    <div asp-validation-summary="All"></div>
    <div>
        <label asp-for="Title">Title:</label>
        <input asp-for="Title" type="text"/>
        <span asp-validation-for="Title"></span>
    </div>
    <div>
        <label asp-for="Description">Description:</label>
        <textarea asp-for="Description"></textarea>
        <span asp-validation-for="Description"></span>

    </div>
    <div>
        <label asp-for="Rate">Rate</label>
        <input asp-for="Rate" type="number"/>
        <span asp-validation-for="Rate"></span>
    </div>
    <input asp-for="Sources" type="hidden"/>
    <div>
        <select asp-for="SourceId" asp-items="Model.Sources"></select>
    </div>
    <input type="submit" text="Submit"/>
</form>
